<div class="row">
  <div class="col-xs-9 col-xs-offset-1">
    <% flash.each do |name, msg| %>
      <div class='alert alert-<%="#{name}"%>'>
        <%= content_tag :span, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        <a style="float: right" href="#" calss="close" data-dismiss="alert">&#215;</a>
      </div>
    <% end %>
  </div>
</div>
